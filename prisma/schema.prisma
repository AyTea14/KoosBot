generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL_SECRET")
}

model Guild {
  id        String   @id @map("_id")
  prefix    String   @default("NONE")
  dj        String[] @default([])
  djOnly    Boolean  @default(false)
  volume    Int      @default(100)
  requester Boolean  @default(true)

  @@map("guild")
}

model User {
  id       String     @id @map("_id")
  playlist Playlist[]

  @@map("user")
}

model Playlist {
  id    String   @id @map("_id")
  name  String
  tracks String[] @default([])

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@unique([userId, name])
  @@map("playlist")
}
