{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "allowJs": true,
        "outDir": "../dist",
        "rootDir": ".",
        "baseUrl": ".",
        "skipLibCheck": true,
        "paths": {
            "#utils/*": ["lib/utils/*"],
            "#lib/*": ["lib/*"],
            "#types/*": ["lib/types/*"],
            "#root/*": ["*"]
        },
        "composite": false
    },
    "include": [".", "./**/*.json"],
    "exclude": ["./tsconfig.json"]
}
